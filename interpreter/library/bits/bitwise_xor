# Implements part of the library.
#
# Added to the environment.

(set ^^
     (func (a b)
           (if (and (= a 0) (= b 0))
               0
               (+ (xor (% a 2) (% b 2)) (* 2 (^^ (>> a 1) (>> b 1)))))))
